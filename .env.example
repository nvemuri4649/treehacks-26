# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-...

# Bright Data API Token (required)
BRIGHTDATA_API_TOKEN=your_brightdata_api_token

# Bright Data Scraping Browser credentials (required for reverse image search)
# Format: brd-customer-CUSTOMER_ID-zone-ZONE_NAME:ZONE_PASSWORD
BRIGHTDATA_BROWSER_AUTH=brd-customer-XXXXX-zone-scraping_browser:PASSWORD

# Face matching threshold (cosine distance, lower = stricter)
FACE_MATCH_THRESHOLD=0.35

# Deepfake detection thresholds
DEEPFAKE_FLAG_THRESHOLD=0.6
DEEPFAKE_HIGH_CONFIDENCE_THRESHOLD=0.8

# Max candidate images to process per scan
MAX_CANDIDATES_PER_SEARCH=50

# Concurrency settings
IMAGE_DOWNLOAD_CONCURRENCY=10
DEEPFAKE_ANALYSIS_CONCURRENCY=3

# Server settings
HOST=0.0.0.0
PORT=8000
